5   REM INTERACTIVE ADC PROGRAM
   REM GET USER INPUT
30  PRINT "ENTER THE SAMPLE COUNT";
40  INPUT W
   REM TRY AGAIN IF INVALID NUMBER ENTERED
50  IF W<1 THEN GOTO 30
   REM GET USER INPUT FOR CHANNEL SELECTION
100 PRINT "ENTER  (0-10) TO CONVERT A CHANNEL,"
110 PRINT "        (11) TO CHANGE THE COUNT,"
120 PRINT "        (12) TO QUIT "
130 INPUT G : IF G=12 THEN END
140 IF G=11 THEN GOTO 30
   REM TRY AGAIN IF INVALID NUMBER ENTERED
150 IF G<0 THEN GOTO 130
160 IF 10<G THEN GOTO 130
   REM INITIALIZE ADC SUM
170 S=0 : PRINT
   REM READ THE ADC AND AVERAGE
200 FOR Y=1 TO W
210 X=CHAN G : S=S+X : NEXT Y
   REM FIND AVERAGE OF READINGS
220 R=S/W
   REM DISPLAY THE RESULTS
230 PRINT  "CHANNEL ";G; " = "; R
   REM REPEAT INDEFINITELY
290 GOTO 100
